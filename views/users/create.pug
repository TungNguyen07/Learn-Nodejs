extends ../layouts/common

block content
	h1 Create
	if errors
		each error in errors
			.alert.alert-danger= error
	form(action="/users/create", method="POST", enctype="multipart/form-data")
		.form-group
			lable(for="name") Name 
			input#name.form-control.mt-2(type="text", name="name", value=values ? values.name : "")
		.form-group
			lable(for="phone") Phone
			input#phone.form-control.mt-2(type="text", name="phone", values=values ? values.phone : "")
		.form-group
			lable(for="avatar") Avatar
			input#avatar.form-control-file(type="file", name="avatar")
		button.btn.btn-primary.mt-2 Create
