extends ../layouts/common

block content
	h1 Login
	if errors
		each error in errors
			.alert.alert-danger= error
	form(method="POST")
		.form-group
			lable(for="email") Email 
			input#email.form-control.mt-2(type="text" name="email", value=values ? values.email : "")
		.form-group
			lable(for="password") Password
			input#password.form-control.mt-2(type="password" name="password")
		button.btn.btn-primary.mt-2 Login
		a.btn.btn-primary.mt-2.ml-2(href='/users/create') Sign up
